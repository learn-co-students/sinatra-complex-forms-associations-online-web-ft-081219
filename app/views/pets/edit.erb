<h1>Update Pet</h1> 
<form method="POST" action="/pets/<%=@pet.id%>">
  <input type="hidden" id="hidden" name="_method" value="PATCH">
  <input type="text" id="pet_name" name="pet_name" value="<%=@pet.name%>">
  <h3>Existing owners</h3>
   <% @owners.each do |owner| %>  
   <input type="radio" value="<%= owner.id %>" name="pet[owner_id]" id="<%=owner.id %>" <%='checked' if owner.id == @pet.owner.id %> > <%= owner.name %>  <br> 
   <%= owner.name %>
  <% end %>
   <br>
  <
  <input type="text" id="owner_name" name="owner[name]">
  <button type="submit" id="submit">Update Pet</button>
</form>


