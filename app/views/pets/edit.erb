<h1>Update Pet</h1>

<h2>Edits for <%= @pet.name %></h2>
<form action='/pets/<%= @pet.id %>' method='post'>
    <input id='hidden' type='hidden' name='_method' value='patch'>

    <label for='pet_name'>Edit the Pet's Name:</label><br>
    <input type='text' id='pet_name' name='pet[name]' value='<%= @pet.name %>'><br>

    <p>Select an existing owner or create a new one below.</p>

    <h3>Existing Owners</h3>
    <% @owners.each do |o| %>
        <input type='radio' name='pet[owner_id]' id='<%= o.id %>' value='<%= o.id %>' <%= 'checked' if @pet.owner==o %>> <%= o.name %></input><br>
    <% end %>
    <br>

    <h3>New Owner</h3></h3>
    <label for='owner_name'>Owner Name:</label><br>
    <input type='text' id='owner_name' name=owner[name]><br><br>

    <input type='submit' value='Update Pet'>
</form>
