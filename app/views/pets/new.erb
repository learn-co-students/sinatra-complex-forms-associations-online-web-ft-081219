<h1>Create a new Pet</h1>

<form method="POST" action="/pets">
  <label for="pet_name">name:</label>
  <input  type="text" name="pet[name]" id="pet_name"></input>
  <br>
  <h3>Choose an existing owner:</h3>
  <% @owners.each do |owner| %>
    <input type="radio" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>"><%= owner.name %></input><br>
  <% end %>
  <br>
  <h3>Or you can create a new owner:</h3>
  <label for="owner_name">Owner Name:</label>
  <input type="text" name="owner[name]" id="owner_name">
  <input type="submit" value="Create Pet">
</form>